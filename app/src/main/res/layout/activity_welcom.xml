<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jojones.jones_tictactoe.WelcomActivity">

    <EditText
        android:id="@+id/etAnswer"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:text="PlayerOne"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="64dp"
        android:text="Player 1's Name"
        android:textAlignment="center"
        android:textSize="32sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="314dp"
        android:onClick="btnPressed"
        android:text="OK"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgO"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="350dp"
        android:layout_marginLeft="100dp"
        android:onClick="imgPressed"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/o_01" />

    <ImageView
        android:id="@+id/imgX"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="350dp"
        android:layout_marginRight="100dp"
        android:onClick="imgPressed"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/x_01" />

    <ImageView
        android:id="@+id/imgTheme01"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="350dp"
        android:layout_marginLeft="50dp"
        android:onClick="imgPressed"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/o_01" />

    <ImageView
        android:id="@+id/imgTheme02"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="350dp"
        android:layout_marginLeft="165dp"
        android:onClick="imgPressed"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/o_02" />

    <ImageView
        android:id="@+id/imgTheme03"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="350dp"
        android:layout_marginRight="50dp"
        android:onClick="imgPressed"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/o_03" />

    <ImageView
        android:id="@+id/imgBorder"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginBottom="347dp"
        android:layout_marginLeft="47dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/border" />

</android.support.constraint.ConstraintLayout>
